<Window x:Class="Kirby_New_Adventure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kirby_New_Adventure"
        mc:Ignorable="d"
        
                Title="Kirby New Adventure" Height="500" Width="800"
       MinWidth="300" MinHeight="300"

Foreground="{StaticResource TextColor}"
FontFamily="{StaticResource MainFont}"
WindowStartupLocation="CenterScreen"
       KeyUp="Window_KeyUp"
         KeyDown="Window_KeyDown">
    <!--PreviewKeyDown="Window_PreviewKeyDown"-->
    <Window.Background>
        <ImageBrush ImageSource="/Assets/Fondo.png"></ImageBrush>
    </Window.Background>

    <Grid>
        <Viewbox>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                <WrapPanel HorizontalAlignment="Center">
                    <Image Source="/Assets/Comida/Corazon.png"></Image>
                    <TextBlock x:Name="ScoreText" VerticalAlignment="Center" 
           FontWeight="ExtraBold"  Foreground="#4B4341" Text="SCORE 0"
         FontSize="22" Margin="10"></TextBlock>
                </WrapPanel>
               

                <Border x:Name="GridBorder" Grid.Row="1" BorderBrush="{StaticResource GridLineColor}" BorderThickness="1.5"
HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.EdgeMode="Aliased" Margin="20 0 20 20">
                    <Grid >
                        <Grid.Background>
                            <ImageBrush ImageSource="/Assets/Pasto2.png"/>
                        </Grid.Background>
                        <UniformGrid x:Name="GameGrid"  Width="400" Height="400" 
SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality">

                        </UniformGrid>
                    </Grid>


                    
                </Border>

            </Grid>

        </Viewbox>
        <Border x:Name="Screnganar" Grid.Row="1"  Visibility="Hidden">
            <Border.Background>
                <ImageBrush ImageSource="Assets/Kirby_Ganar.png">

                </ImageBrush>
            </Border.Background>
            <Grid>
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="AliceBlue" Opacity="0.7"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Height" Value="80"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Column="1" Grid.Row="1" x:Name="RegresarO" Click="Regresar_Click">Regresar a inicio</Button>
                <Button Grid.Column="3" Grid.Row="1" Click="Jugar_Click">Siguiente nivel</Button>
                <Image Source="Assets/Mensaje.png" Visibility="Hidden" x:Name="mensaje" Grid.Column="2" Grid.Row="3"></Image>
                <!--<Label DockPanel.Dock="Top" FontSize="40" Content="Ganaste"></Label>-->
            </Grid>
        </Border>
        <Border x:Name="Screnperder" Grid.Row="1"  Visibility="Hidden">
            <Border.Background>
                <ImageBrush ImageSource="Assets/Kirby_perder.png">

                </ImageBrush>
            </Border.Background>
            <Grid>
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="AliceBlue" Opacity="0.7"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Height" Value="80"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Column="3" Grid.Row="2" Name="Regresar" Click="Regresar_Click">Regresar a inicio</Button>
                <Button Grid.Column="3" Grid.Row="1" Name="Reintentar"  Click="Reintentar_Click">Reintentar</Button>
                <!--<Label DockPanel.Dock="Top" FontSize="40" Content="Perdiste"></Label>-->
            </Grid>
        </Border>

        <Border x:Name="SelectNivel" >
            <Border.Background>
                <ImageBrush ImageSource="Assets/Kirby_level.png">

                </ImageBrush>
            </Border.Background>
            <Grid x:Name="LevelScreen" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="59" Foreground="Black" HorizontalAlignment="Center">Escoge la dificultad</TextBlock>

                <DockPanel  Grid.Row="1" VerticalAlignment="Center" Width="300">
                    
                    <DockPanel.Resources>
                        <Style TargetType="RadioButton">
                            <Setter Property="FontSize" Value="50"/>
                            <Setter Property="Background" Value="red"/>
                           
                            <Setter Property="Template">
                                
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="Transparent">
                                            <Border.Resources>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=RadioButton} ,Path=IsChecked}"
                                                                     Value="True">
                                                            <Setter Property="Background" Value="black"/>
                                                            <Setter Property="TextBlock.Foreground" Value="LightPink"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <!--<Setter Property="Margin" Value="5" />
                                                    <Setter Property="Padding" Value="10" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter Property="Background" Value="red" />
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="False">
                                                            <Setter Property="Background" Value="White" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>-->
                                                </Style>
                                            </Border.Resources>
                                            <ContentPresenter HorizontalAlignment="Center"></ContentPresenter>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            
                        </Style>
                    </DockPanel.Resources>
                    
                    <RadioButton HorizontalAlignment="Center" DockPanel.Dock="Top" x:Name="btnfacil" GroupName="difi">Facil</RadioButton>
                    <RadioButton HorizontalAlignment="Center" DockPanel.Dock="Top" x:Name="btnnormal" GroupName="difi" IsChecked="True">Normal</RadioButton>
                    <RadioButton HorizontalAlignment="Center" DockPanel.Dock="Top" x:Name="btndificil" GroupName="difi" >Dificil</RadioButton>
                    <Button   FontSize="30" Height="100" Width="200" HorizontalAlignment="Center" x:Name="Jugar" Click="Jugar_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="Assets/Jugar_Boton.jpeg"/>
                        </Button.Background>
                    </Button>
                </DockPanel>
                
                


            </Grid>
        </Border>
        <Border x:Name="Overlay" Grid.Row="1"  
RenderOptions.EdgeMode="Aliased">
            <Border.Background>
                <ImageBrush ImageSource="Assets/Pantalla_principal.jpg">
                    
                </ImageBrush>
            </Border.Background>

            <Grid x:Name="LockScreen" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--<TextBlock FontSize="50">Kirby New Adventure </TextBlock>-->
                <Button Grid.Column="2" Grid.Row="2"  Height="70" FontSize="50"  
                        BorderThickness="0" Margin="5" x:Name="btnInicio" Click="btnInicio_Click">
                    <Button.Background>
                        <SolidColorBrush Color="AliceBlue" Opacity="0.5"/>
                    </Button.Background>
                    Start</Button>

            </Grid>
            


        </Border>
        <Border x:Name="ScrenSuperganar" Grid.Row="1"  Visibility="Hidden">
            <Border.Background>
                <ImageBrush ImageSource="Assets/kirbyganador.png">

                </ImageBrush>
            </Border.Background>
            <Grid>
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="AliceBlue" Opacity="0.7"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Height" Value="80"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Column="1" Grid.Row="4" x:Name="Regresar1" Click="Regresar_Click">Regresar a inicio</Button>
                <!--<Button Grid.Column="3" Grid.Row="1" Click="Jugar_Click">Siguiente nivel</Button>-->
                <TextBlock Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" x:Name="PuntajeFinal">Puntajeadddd finall </TextBlock>
                <Image Source="Assets/Mensaje.png" Visibility="Hidden" x:Name="mensaje2" Grid.Column="2" Grid.Row="3"></Image>
                <!--<Label DockPanel.Dock="Top" FontSize="40" Content="Ganaste"></Label>-->
            </Grid>
        </Border>

    </Grid>
    
</Window>
